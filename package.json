{
  "name": "monorepo-test",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:unit": "pnpm --filter ./apps/client run test -- --run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "dev": "pnpm -r --parallel --stream dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "docs:dev": "pnpm --filter ./apps/docs start",
    "docs:build": "pnpm --filter ./apps/docs build",
    "docs:serve": "pnpm --filter ./apps/docs serve"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "concurrently": "^8.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Chris-Zuant/monorepo-test.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Chris-Zuant/monorepo-test/issues"
  },
  "homepage": "https://github.com/Chris-Zuant/monorepo-test#readme",
  "private": true,
  "packageManager": "pnpm@9.0.0"
}
