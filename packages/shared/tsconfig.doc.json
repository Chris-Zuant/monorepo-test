{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "stripInternal": true
  },
  "include": ["src/index.ts"]
}